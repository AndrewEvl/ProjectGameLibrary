<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/game_library</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="entities.Developer"/>
        <mapping class="entities.ForumTheme"/>
        <mapping class="entities.Game"/>
        <mapping class="entities.Genre"/>
        <mapping class="entities.News"/>
        <mapping class="entities.Platform"/>
        <mapping class="entities.Publisher"/>
        <mapping class="entities.Reviews.ReviewGame"/>
        <mapping class="entities.SystemSetting"/>
        <mapping class="entities.User"/>
        <mapping class="entities.Role"/>
        <mapping class="entities.SystemParts.Cpu"/>
        <mapping class="entities.SystemParts.Ram"/>
        <mapping class="entities.SystemParts.Hdd"/>
        <mapping class="entities.SystemParts.VideoCard"/>
        <mapping class="entities.Reviews.NewsComment"/>
        <mapping class="entities.Reviews.ReviewGame"/>

    </session-factory>
</hibernate-configuration>